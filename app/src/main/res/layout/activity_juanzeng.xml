<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:layout_marginTop="-15dp"
        android:adjustViewBounds="true"
        android:src="@drawable/foxiang_press"
        android:id="@+id/juanzeng_foxiang"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="6.7" />

    <TextView
        android:layout_marginTop="-18dp"
        android:text="@string/juanzeng1"
        android:textSize="20sp"
        android:textColor="#E1E1E1"
        android:lineSpacingMultiplier="1.35"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"/>

        <Button
            android:textColor="#FAFAFA"
            android:background="@drawable/zhifubao_background"
            android:padding="10dp"
            android:alpha="0.95"
            android:elevation="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/zhifubao_button"
            android:textSize="21sp"
            android:layout_width="wrap_content"
            android:text="@string/juan_button1"
            android:layout_height="wrap_content" />

</LinearLayout>
